#include <iostream>

using namespace std;

int main ()
{
  //flipped solid diamond
  

  int n;

  cin >> n;
  for (int i = 0; i < n; i++)
    {

      for (int j = 0; j < n - i; j++)
	{

	  cout << "*";
	}
      for (int k = 0; k < 2 * i + 1; k++)
	{

	  cout << " ";
	}
      for (int p = 0; p < n - i; p++)
	{

	  cout << "*";
	}
      cout << endl;

    }
  for (int i = 0; i < n; i++)
    {

      for (int j = 0; j < i + 1; j++)
	{

	  cout << "*";

	}
      for (int k = 0; k < 2 * n - 2 * i - 1; k++)
	{

	  cout << " ";
	}
      for (int p = 0; p < i + 1; p++)
	{

	  cout << "*";

	} cout << endl;
    }

}
